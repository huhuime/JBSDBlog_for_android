<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_d"
    tools:context="com.jibushengdan.android.jbsdblog.activity.DetailActivity">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/activity_bar"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimary"
        android:elevation="6dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="@dimen/activity_bar"
                android:layout_height="@dimen/activity_bar"
                android:background="?selectableItemBackground"
                app:srcCompat="@drawable/ic_back"
                android:tint="@color/colorFont"
                android:id="@+id/backBtn" />
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/titleSize"
            android:text="标题"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:transitionName="name"/>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/contentLayout"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"
                android:background="@color/bg"
                android:orientation="vertical"
                android:divider="@drawable/spacer_line_0_3"
                android:showDividers="middle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg">
                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
                <LinearLayout
                    android:id="@+id/moreBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="?selectableItemBackground"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin">
                    <TextView
                        android:id="@+id/moreTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新"/>
                    <ImageView
                        android:id="@+id/moreImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_back"
                        android:tint="@color/colorDofFont"
                        android:rotation="-90"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/likeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="?selectableItemBackground"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_vertical_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_like"
                        android:drawableTint="@color/colorDofFont"
                        android:drawablePadding="6dp"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </android.support.design.widget.CoordinatorLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
