<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/touch_bg"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorDarkFont"
        app:srcCompat="@drawable/ic_qm" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkFont"
        android:text="　　"
        android:id="@+id/abs"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGrayFont"
        android:text="2014-10-01"
        android:id="@+id/dat"
        android:drawableLeft="@drawable/ic_time"
        android:drawableTint="@color/colorGrayFont"
        android:drawablePadding="3dp"
        android:layout_below="@id/abs"/>
</RelativeLayout>