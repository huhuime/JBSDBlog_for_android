<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="@dimen/activity_bar"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:alpha="0.5">
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="02-25"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="播放器bug修复|第1阶段"
            android:id="@+id/name"
            android:transitionName="name"/>
        <TextView
            android:id="@+id/abs"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修复拖到进度条后再次插入播放时间的问题..."
            android:alpha="0.9"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7">
            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-10-01"
                android:id="@+id/tip"
                android:drawableLeft="@drawable/ic_tip"
                android:drawableTint="@color/colorFont"
                android:drawablePadding="3dp"
                android:layout_below="@id/abs"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayFont"
                android:text="评论数"
                android:id="@+id/comment"
                android:drawableLeft="@drawable/ic_comment"
                android:drawableTint="@color/colorGrayFont"
                android:drawablePadding="3dp"
                android:layout_below="@id/abs"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorFont"
            android:alpha="0.5"/>
    </LinearLayout>
</LinearLayout>