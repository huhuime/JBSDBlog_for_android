<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/touch_bg"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkFont"
        style="?android:attr/textAppearanceMedium"
        android:text="播放器bug修复|第1阶段"
        android:id="@+id/name"
        android:transitionName="name"/>
    <TextView
        android:id="@+id/abs"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkFont"
        android:text="修复拖到进度条后再次插入播放时间的问题..." />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrayFont"
            android:text="2014-10-01"
            android:id="@+id/dat"
            android:drawableLeft="@drawable/ic_time"
            android:drawableTint="@color/colorGrayFont"
            android:drawablePadding="3dp"
            android:layout_below="@id/abs"/>
        <TextView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrayFont"
            android:text="2014-10-01"
            android:id="@+id/tip"
            android:drawableLeft="@drawable/ic_tip"
            android:drawableTint="@color/colorGrayFont"
            android:drawablePadding="3dp"
            android:layout_below="@id/abs"/>
        <TextView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrayFont"
            android:text="评论数"
            android:id="@+id/comment"
            android:drawableLeft="@drawable/ic_comment"
            android:drawableTint="@color/colorGrayFont"
            android:drawablePadding="3dp"
            android:layout_below="@id/abs"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>